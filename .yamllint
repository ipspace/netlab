---
extends: default

rules:
  braces:
    max-spaces-inside: 1
  colons:
    max-spaces-after: -1
  brackets:
    max-spaces-inside: 1
  indentation:
    indent-sequences: false
  truthy: false
  line-length:
    max: 120
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: true
