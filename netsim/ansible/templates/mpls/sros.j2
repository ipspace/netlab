updates:
- path: configure/router[router-name=Base]
  val:
   mpls:
    admin-state: enable
    interface:
    - interface-name: system
      admin-state: enable
   rsvp: # RSVP interface must be present along with MPLS interface
    admin-state: disable
    interface:
    - interface-name: system
      admin-state: disable

{% if ldp is defined %}
{%   include 'sros.ldp.j2' +%}
{% endif %}
{% if 'bgp' in mpls %}
{%   include 'sros.bgp.j2' +%}
{% endif %}
{% if 'vpn' in mpls %}
{%   include 'sros.mplsvpn.j2' +%}
{% endif %}

