{% if 'ipv6' in isis %}
ipv6 forwarding
{% endif %}
!
router isis Gandalf
  log-adjacency-changes
  hostname dynamic
  is-type {{ isis.type }}
  metric-style wide
{% if isis.net is defined %}
  net {{ isis.net }}
{% elif isis.area is defined %}
  net {{ "%s.0000.0000.%04d.00" % (isis.area,id) }}
{% endif %}
{% if isis.ipv6 is defined %}
  topology ipv6-unicast
{% endif %}
!
interface lo0
{% if 'ipv4' in loopback %}
  ip router isis Gandalf
{% endif %}
{% if 'ipv6' in loopback %}
  ipv6 router isis Gandalf
{% endif %}
!
{% for l in interfaces|default([]) %}
{%   if "external" in l.role|default("") %}
! IS-IS not configured on external interface {{ l.ifname }}
{%   else %}
interface {{ l.ifname }}
{%     if 'ipv4' in l %}
  ip router isis Gandalf
{%     endif %}
{%     if 'ipv6' in l %}
  ipv6 router isis Gandalf
{%     endif %}
{%     if l.isis.network_type_p2p or 'unnumbered' in l %}
  isis network point-to-point
{%     endif %}
{%     if l.isis.cost is defined or l.isis.metric is defined %}
  isis metric {{ l.isis.metric|default(l.isis.cost) }}
{%     endif %}
{%     if l.isis.passive %}
  isis passive
{%     endif %}
{%   endif %}
!
{% endfor %}
