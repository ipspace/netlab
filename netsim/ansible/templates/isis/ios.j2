{% if 'ipv6' in isis %}
ipv6 unicast-routing
{% endif %}
!
router isis Gandalf
  log-adjacency-changes
  hostname dynamic
  is-type {{ isis.type }}
  metric-style wide
{% if isis.net is defined %}
  net {{ isis.net }}
{% elif isis.area is defined %}
  net {{ "%s.0000.0000.%04d.00" % (isis.area,id) }}
{% endif %}
{% for l in interfaces|default([]) if l.isis.passive %}
  passive-interface {{ l.ifname }}
{% endfor %}
{% if isis.ipv6 is defined %}
  address-family ipv6 unicast
    multi-topology
{% endif %}
!
interface Loopback0
{% if 'ipv4' in loopback %}
  ip router isis Gandalf
{% endif %}
{% if 'ipv6' in loopback %}
  ipv6 router isis Gandalf
{% endif %}
!
{% for l in interfaces|default([]) if 'isis' in l %}
interface {{ l.ifname }}
{%     if 'ipv4' in l %}
  ip router isis Gandalf
{%     endif %}
{%     if 'ipv6' in l %}
  ipv6 router isis Gandalf
{%     endif %}
{%     if l.isis.network_type|default("") == "point-to-point" %}
  isis network point-to-point
{%     endif %}
{%     if l.isis.cost is defined or l.isis.metric is defined %}
  isis metric {{ l.isis.metric|default(l.isis.cost) }}
{%       if 'ipv6' in isis and 'ipv6' in l %}
  isis ipv6 metric {{ l.isis.metric|default(l.isis.cost) }}
{%       endif %}
{%     endif %}
{%     if l.isis.bfd.ipv4|default(False) %}
 isis bfd
{%     endif %}
{%     if l.isis.bfd.ipv6|default(False) %}
 isis ipv6 bfd
{%     endif %}
!
{% endfor %}
