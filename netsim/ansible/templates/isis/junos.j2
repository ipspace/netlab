protocols {
  delete: isis;
}
protocols {
  isis {
{% if 'ipv6' in isis %}
    topologies {
      ipv6-unicast;
    }
{% endif %}
    interface lo0.0;
{% for l in interfaces|default([]) %}
{%   if "external" in l.role|default("") %}
   # IS-IS not configured on external interface {{ l.ifname }}
{%   else %}
    interface {{ l.ifname }} {
{%     if l.neighbors|default([])|length == 1 %}
      point-to-point;
{%     endif %}
{%     if l.type|default("") == "stub" or l.role|default("NONE") in ["stub","passive"] %}
      passive;
{%     endif %}
{%     if l.isis.metric is defined or l.isis.cost is defined %}
      level 1 metric {{ l.isis.metric|default(l.isis.cost) }};
      level 2 metric {{ l.isis.metric|default(l.isis.cost) }};
      level 1 ipv6-unicast-metric {{ l.isis.metric|default(l.isis.cost) }};
      level 2 ipv6-unicast-metric {{ l.isis.metric|default(l.isis.cost) }};
{%     endif %}
    }
{%   endif %}
{% endfor %}
  }
}
security {
  forwarding-options {
    family {
      iso {
        mode packet-based;
      }
    }
  }
}

interfaces {
  lo0 {
    unit 0 {
      family iso {
{% if isis.net is defined %}
        address {{ isis.net }}
{% elif isis.area is defined %}
        address {{ "%s.0000.0000.%04d.00" % (isis.area,id) }}
{% endif %}
      }
    }
  }
{% for l in interfaces|default([]) if not "external" in l.role|default("") %}
  {{ l.ifname }} {
    unit 0 {
      family iso;
    }
  }
{% endfor %}
}
