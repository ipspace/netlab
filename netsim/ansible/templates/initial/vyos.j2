#!/bin/vbash
source /opt/vyatta/etc/functions/script-template

if [ "$(id -g -n)" != 'vyattacfg' ] ; then
    exec sg vyattacfg -c "/bin/vbash $(readlink -f $0) $@"
fi

# Configuration items start here

configure
{#
It seems VyOS has some problems in handling hostnames with only one letter in it.
#}
{% if inventory_hostname|length > 1 %}
set system host-name '{{ inventory_hostname }}'
{% else %}
set system host-name 'vyos-{{ inventory_hostname }}'
{% endif %}

{% if vrfs is defined %}
{% include 'vyos.vrf.j2' %}
{% endif %}
{% if vlans is defined %}
{% include 'vyos.vlan.j2' %}
{% endif %}

{% if 'ipv4' in loopback %}
set interfaces dummy dum0 address {{ loopback.ipv4 }}
{% endif %}
{% if 'ipv6' in loopback %}
set interfaces dummy dum0 address {{ loopback.ipv6 }}
{% endif %}

{% for l in interfaces|default([]) %}

{#
# Define interface hierarchy/tree level (i.e. ethernet, bridge, ...)
#}
{% set ns = namespace(iface_level="ethernet") %}
{% if l.virtual_interface is defined and l.virtual_interface %}
{% set ns.iface_level = "bridge br0 vif" %}
{% endif %}

{% if l.name is defined %}
set interfaces {{ ns.iface_level }} {{ l.ifname }} description '{{ l.name }}{{ " ["+l.role+"]" if l.role is defined else "" }}'
{% elif l.type|default("") == "stub" %}
set interfaces {{ ns.iface_level }} {{ l.ifname }} description 'Stub interface'
{% endif %}

{% if l.mtu is defined %}
set interfaces {{ ns.iface_level }} {{ l.ifname }} mtu {{ l.mtu }}
{% endif %}

{% if 'ipv4' in l %}
set interfaces {{ ns.iface_level }} {{ l.ifname }} address {{ l.ipv4 }}
{% endif %}
{% if 'ipv6' in l %}
set interfaces {{ ns.iface_level }} {{ l.ifname }} address {{ l.ipv6 }};
{% endif %}

{% if l.vrf is defined %}
set interfaces {{ ns.iface_level }} {{ l.ifname }} vrf {{ l.vrf }}
{% endif %}

{% endfor %}

set service lldp interface all
set service lldp interface {{ mgmt.ifname|default('eth0') }} disable

# Commit, save and exit from subshell

commit
save
exit

