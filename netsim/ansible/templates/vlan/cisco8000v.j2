{% for ifdata in interfaces if ifdata.vlan.access_id is defined %}
{%   set vlan_mode = ifdata.vlan.mode|default('irb') %}
interface {{ ifdata.ifname }}{{ ifdata._xr_native_subif }}{%
  if vlan_mode != 'route' %} l2transport{% endif +%}
{%   if ifdata.type == 'vlan_member' %}
 encapsulation dot1Q {{ ifdata.vlan.access_id }}
{%     if vlan_mode != 'route' %}
 rewrite ingress tag pop 1 symmetric
{%     endif %}
{%   elif ifdata._xr_native_subif|default('') %}
 encapsulation untagged
{%   endif %}
!
{% endfor %}
{% if vlans is defined %}
{%   for vname,vdata in vlans.items() %}
{%     if loop.first %}
l2vpn
 bridge group netlab
{%     endif %}
  bridge-domain BD{{ vdata.id }}
{%     if vdata.mode != 'bridge' %}
   routed interface BVI{{ vdata.id }}
{%     endif %}
{%     for ifdata in interfaces
         if ifdata.vlan.access_id|default(-1) == vdata.id and
            ifdata.vlan.mode|default('irb') != 'route' %}
   interface {{ ifdata.ifname }}{{ ifdata._xr_native_subif }}
{%     endfor %}
!
{%   endfor %}
{% endif %}

{#or ifdata.vlan.trunk_id is defined %}
!
interface {{ ifdata.ifname }}
{%   if ifdata.vlan.trunk_id is defined %}
{%     for vlan_id in ifdata.vlan.trunk_id if vlan_id != ifdata.vlan.access_id|default(0) %}
 ethernet service instance {{ vlan_id }}
  encapsulation dot1q {{ vlan_id }}
  bridge-domain BD{{ vlan_id }}
{%     endfor %}
{%     if ifdata.vlan.native is defined %}
 service instance {{ ifdata.vlan.access_id }}
  encapsulation untagged
  bridge-domain BD{{ ifdata.vlan.access_id }}
{%     endif %}
{%   elif ifdata.vlan.access_id is defined %}
{%     if ifdata.type == 'vlan_member' %}
 encapsulation dot1Q {{ ifdata.vlan.access_id }}
{%     else %}
 service instance {{ ifdata.vlan.access_id }}
  encapsulation untagged
  bridge-domain BD{{ ifdata.vlan.access_id }}
{%     endif %}
{%   endif %}
{% endfor +%}
#}
