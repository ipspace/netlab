    {{ name }}.vm.synced_folder ".", "/vagrant", id: "vagrant-root", disabled: true

    {{ name }}.ssh.insert_key = false
    {{ name }}.ssh.username = "openbsd"
    {{ name }}.ssh.password = "vagrant"
    {{ name }}.vm.guest = :openbsd

    {{ name }}.vm.provider :libvirt do |domain|
      domain.cpus = 1
      domain.memory = 1024
    end
