name: {{ name }}

topology:
  nodes:
{% for n in nodes %}
    {{ n.name }}:
      kind: {{ n.kind | default(n.device) }}
      image: {{ n.box }}
{% if n.binds %}
      binds:
{% for b in n.binds %}
        - {{ b }}
{% endfor %}
{% endif %}
{% endfor %}

  links:
{% for l in links %}
  - endpoints:
{%   for n in nodes %}
{%     for nl in n.links if nl.linkindex == l.linkindex %}
    - "{{ n.name }}:{{ nl.provider_ifname|default(nl.ifname) }}"
{%      endfor %}
{%    endfor %}
{% endfor %}
