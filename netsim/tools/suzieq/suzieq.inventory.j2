---
sources:
- name: netlab_ssh
  hosts:
{% for nn,nd in nodes.items() if nd.ansible_connection|default('') == 'network_cli' %}
  - url: ssh://{{ nd.ansible_user }}:{{ nd.ansible_ssh_pass }}@{{ 
            nd.ansible_host }}:{{ nd.ansible_ssh_port or '22' }}/ devtype={{ nd.ansible_network_os }}
{% endfor %}

devices:
- name: ignore-known-hosts
  ignore-known-hosts: true
  transport: ssh

namespaces:
- name: netlab_ssh
  source: netlab_ssh
  device: ignore-known-hosts

